{
  "name": "@gollilla/best",
  "version": "0.1.0",
  "description": "Best - Bedrock Edition Server Testing library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "best": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./globals": {
      "import": "./dist/globals.js",
      "types": "./dist/globals.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --import tsx src/cli/index.ts"
  },
  "keywords": [
    "minecraft",
    "bedrock",
    "testing",
    "mcpe",
    "bedrock-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bedrock-protocol": "^3.44.0",
    "prismarine-block": "^1.22.0",
    "prismarine-chunk": "^1.39.0",
    "prismarine-registry": "^1.11.0",
    "vec3": "^0.1.10"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
